        GroupBySet[] groupBySet = null;

        groupBySet = new GroupBySet[1];
        groupBySet[0] = new GroupBySet("GROUP_OTT_ID", (byte) (Protocol.GroupBySet.OP_COUNT | Protocol.GroupBySet.ORDER_COUNT), "ASC");

